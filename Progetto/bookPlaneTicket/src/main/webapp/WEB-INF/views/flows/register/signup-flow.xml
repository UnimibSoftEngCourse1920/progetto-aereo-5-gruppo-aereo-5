<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow.xsd">

	<var name="user" class="gruppoaereo5.bookBackEnd.dto.User"></var>

	<view-state id="registrati" view="flows/register/signup-registrati" model="user">
		<transition on="conferma" to="conferma"/> 			
	</view-state>

	<view-state id="conferma" view="flows/register/signup-conferma" model="flowScope.registerModel">
			<transition on="registrati" to="registrati"/> 
			<transition on="registrazioneEffettuata" to="registrazioneEffettuata"/>		 
	</view-state>
	
	<end-state id="registrazioneEffettuata" view="flows/register/signup-registrazioneEffettuata"></end-state>
	<end-state id="home" view="externalRedirect:contextRelative:/"/>
	
	<global-transitions>
		<transition on="home" to="home"/>
	</global-transitions>
</flow>